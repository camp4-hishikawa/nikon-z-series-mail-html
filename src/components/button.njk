{% macro button(site, url, src, alt, paddingSide) %}
<!-- block: button -->
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top" align="left"{% if (paddingSide) %} style="padding-right: 6.25%; padding-left: 6.25%;"{% endif %}>
      <a href="{{ url }}" target="_blank"><img src="{{ site.base }}{{ site.path }}{{ src }}" alt="{{ alt }}" width="700" border="0" style="display: block; width: 100%; height: auto;"></a>
    </td>
  </tr>
</table>
<!-- /block: button -->
{% image src, tag=false %}
{% endmacro %}
