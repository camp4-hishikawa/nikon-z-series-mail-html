{% macro image(site, src, alt, width, paddingSide) %}
<!-- block: image -->
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top" align="left"{% if (paddingSide) %} style="padding-right: 6.25%; padding-left: 6.25%;"{% endif %}>
      <img src="{{ site.base }}{{ site.path }}{{ src }}" alt="{{ alt }}" width="{{ width | default(700) }}" border="0" style="display: block; width: 100%; height: auto;">
    </td>
  </tr>
</table>
<!-- /block: image -->
{% image src, tag=false %}
{% endmacro %}
