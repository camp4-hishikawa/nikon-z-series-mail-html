{% macro listOrder(items, class, paddingSide, style) %}

{% set style = style + " font-family: YuGothic, 'ヒラギノ角ゴ Pro', 'Hiragino Kaku Gothic Pro', 'メイリオ', Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;  line-height: 1.63;" %}

{% if 'text-normal' in class %}
{% set style = style + ' font-size: 1em;' %}
{% elif 'text-small' in class %}
{% set style = style + ' font-size: 0.72em;' %}
{% endif %}

<!-- block: list order -->
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top" align="left"{% if (paddingSide) %} style="padding-right: 6.25%; padding-left: 6.25%;"{% endif %}>
      <table width="100%" border="0" cellpadding="0" cellspacing="0">
        {% for item in items %}
        {% if (loop.index > 1) %}
        <tr>
          <td colspan="2" valign="top" align="left" style="font-size: 0; line-height: 0; padding-bottom: 20px;" class="gap-20"></td>
        </tr>
        {% endif %}
        <tr>
          <td valign="top" align="left" width="30">
            <div class="{{ class }}" style="{{ style }} padding-right: 0.75em; font-style: italic; font-weight: bold;">{{ loop.index }}.</div>
          </td>
          <td valign="top" align="left">
            <div class="{{ class }}" style="{{ style }}">{{ item | safe }}</div>
          </td>
        </tr>
        {% endfor %}
      </table>
    </td>
  </tr>
</table>
<!-- /block: list order -->
{% endmacro %}
