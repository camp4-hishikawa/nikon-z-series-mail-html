{% macro text(content, class, style, paddingSide) %}

{% if style is not defined or style is null %}
{% set style = '' %}
{% endif %}

{% set style = style + " font-family: YuGothic, 'ヒラギノ角ゴ Pro', 'Hiragino Kaku Gothic Pro', 'メイリオ', Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;" %}

{% if 'text-lv' in class %}
{% set style = style + ' font-weight: bold;' %}
{% endif %}

{% if 'text-lv1' in class %}
{% set style = style + ' line-height: 1.2;' %}
{% elif 'text-lv' in class %}
{% set style = style + ' line-height: 1.5;' %}
{% else %}
{% set style = style + ' line-height: 1.63;' %}
{% endif %}

{% if 'text-normal' in class %}
{% set style = style + ' font-size: 1em;' %}
{% elif 'text-small' in class %}
{% set style = style + ' font-size: 0.75em;' %}
{% elif 'text-lv1' in class %}
{% set style = style + ' font-size: 1.625em;' %}
{% elif 'text-lv2' in class %}
{% set style = style + ' font-size: 1.375em;' %}
{% elif 'text-lv3' in class %}
{% set style = style + ' font-size: 1.25em;' %}
{% elif 'text-lv4' in class %}
{% set style = style + ' font-size: 1.122em;' %}
{% endif %}

<!-- block: text -->
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top" align="left"{% if (paddingSide) %} style="padding-right: 6.25%; padding-left: 6.25%;"{% endif %}>
      <div class="{{ class }}" style="{{ style }}">{{ content | safe }}</div>
    </td>
  </tr>
</table>
<!-- /block: text -->
{% endmacro %}
