{% macro titleIcon(iconSrc, iconAlt, content, paddingSide) %}
<!-- block: title icon -->
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top" align="center"{% if (paddingSide) %} style="padding-right: 6.25%; padding-left: 6.25%;"{% endif %}>
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td valign="top" align="left">
            <img src="http://nij.nikon.camp4.tokyo/cms/mail/cx/images/{{ iconSrc }}" alt="{{ iconAlt }}" height="20" border="0" style="display: block; width: auto; height: 20px;" class="block-title-icon">
          </td>
        </tr>
        <tr>
          <td valign="top" align="left" style="font-size: 0; line-height: 0; padding-bottom: 5px;" class="gap-5"></td>
        </tr>
        <tr>
          <td valign="top" align="left">
            <div class="text-lv3" style="font-family: YuGothic, 'ヒラギノ角ゴ Pro', 'Hiragino Kaku Gothic Pro', 'メイリオ', Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif; font-size: 1.25em; font-weight: bold; line-height: 1.5;">{{ content | safe }}</div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- /block: title icon -->
{% image iconSrc, tag=false %}
{% endmacro %}
