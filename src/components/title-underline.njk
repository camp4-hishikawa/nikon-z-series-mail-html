{% macro titleUnderline(content, paddingSide) %}
<!-- block: title underline -->
<table width="100%" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td valign="top" align="center"{% if (paddingSide) %} style="padding-right: 6.25%; padding-left: 6.25%;"{% endif %}>
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td valign="top" align="left">
            <div class="text-lv3" style="padding-right: 0.5em; padding-left: 0.5em; font-family: YuGothic, 'ヒラギノ角ゴ Pro', 'Hiragino Kaku Gothic Pro', 'メイリオ', Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif; font-size: 1.25em; font-weight: bold; line-height: 1.5; border-bottom: solid 0.4em #FFE100; text-align: center;">{{ content | safe }}</div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
<!-- /block: title underline -->
{% endmacro %}
