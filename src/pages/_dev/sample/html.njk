<h1>Functions</h1>
<h2>fileExists</h2>
<p>ファイルの存在チェック</p>
<!-- prettier-ignore-start -->
<pre class="code-example"><code>{% filter escape %}{% raw %}<!-- dist からの絶対パス -->
{% if fn.fileExists('/favicon.svg') %}<img src="/favicon.svg" />{% endif %}

<!-- プロジェクトルートから指定 -->
{% if fn.fileExists('package.json') %}<div>Exists: package.json</div>{% endif %}

<!-- ページからの相対パス -->
{% if fn.fileExists('./html.html', page.outputPath) %}<a href="./html.html">css.html</a>{% endif %}
{% endraw %}{% endfilter %}</code></pre>
<!-- prettier-ignore-end -->
{% if fn.fileExists('/favicon.png') %}<img src="/favicon.png" />{% endif %}
